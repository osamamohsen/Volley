<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.osama.volley.JsonActivity">

    <TextView
        android:id="@+id/txt_person_name"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:text="Name Person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_person_email"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:text="Email Person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_person_phone"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:text="Phone Person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_response_json"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:text="Fetch Json Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_json_next"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:text="Go To Next Activty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
